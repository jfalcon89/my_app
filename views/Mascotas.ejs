<!-- Cabecera & Navbar template -->
<%- include('template/cabecera', {tituloWeb: "Inicio" }); %>


    <div class="container">

        <table class="table">
            <thead class="thead-ligth">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Raza</th>
                    <th scope="col">Accion</th>
                </tr>
            </thead>
            <tbody>
                <% if (arrayMascotas.length > 0) { %>
                    <% arrayMascotas.forEach(mascota=> { %>

                        <tr>
                            <th scope="row">
                                <%= mascota.id %>
                            </th>
                            <td>
                                <%= mascota.nombre %>
                            </td>
                            <td>
                                <%= mascota.raza %>
                            </td>
                            <td>@mdo</td>
                        </tr>

                        <% }) %>
                            <% } %>

            </tbody>
        </table>
    </div>
    </body>

    </html>