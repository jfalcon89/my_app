<!-- Cabecera & Navbar template -->
<%- include('template/cabecera', {tituloWeb: "Detalle mascota"}); %>
    <%- include('template/navbar'); %>
        <div class="container">
            <div class="contenedor-img d-flex justify-content-center">
                <img data-aos="fade-right" class="w-25" src="/img/mascotas/detalles/img_detalles-p.jpg" alt="">
            </div>
            <h1 data-aos="fade-up" class="text-secondary">Detalle Mascotas</h1>

            <% if (error) { %>
                <p>

                    <%= mensaje %>

                </p>
                <a href="/Mascotas" class="btn btn-dark btn-block">Volver a Mascotas</a>

                <% } %>

                    <% if (!error) { %>

                        <div class="container-table table-responsive">
                            <table class="table table-sm">
                                <thead class="thead-ligth">
                                    <tr>
                                        <th scope="col">Id</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Raza</th>
                                        <th scope="col">Sexo</th>
                                        <th scope="col">Accion</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <th scope="row">
                                            <%= mascota.id %>
                                        </th>
                                        <td>
                                            <%= mascota.nombre %>
                                        </td>
                                        <td>
                                            <%= mascota.raza %>
                                        </td>
                                        <td>
                                            <%= mascota.sexo %>
                                        </td>
                                        <td><button class="btn btn-danger btn-sm" id="btnEliminar" data-id="<%= mascota.id %>">Eliminar</button></td>

                                    </tr>

                                </tbody>
                            </table>
                        </div>

                        <% } %>
        </div>

        <script src="/js/btnEliminar.js"></script>

        <%- include("template/footer")  %>