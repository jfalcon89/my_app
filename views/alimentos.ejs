<!-- Cabecera & Navbar template -->
<%- include('template/cabecera', {tituloWeb: "alimentos" }); %>
    <%- include('template/navbar'); %>

        <div class="container">
            <img data-aos="fade-left" id="img-mascotas" class="w-75" src="/img/alimentos/img_alimentos-p.jpg" alt="alimentos">
            <h1 data-aos="fade-up" class="text-secondary">Alimentos</h1>

            <a class="btn btn-success btn-block my-4" href="/alimentos/crear-alimentos">Crear nuevo alimento</a>

            <div class="container-table table-responsive">
                <table class="table table-sm">
                    <thead class="thead-ligth">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Marca</th>
                            <th scope="col">Edad</th>
                            <th scope="col">Accion</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (arrayAlimentos.length > 0) { %>
                            <% arrayAlimentos.forEach(alimentos=> { %>

                                <tr>
                                    <th scope="row">
                                        <%= alimentos.id %>
                                    </th>
                                    <td>
                                        <%= alimentos.nombre %>
                                    </td>
                                    <td>
                                        <%= alimentos.marca %>
                                    </td>
                                    <td>
                                        <%= alimentos.edad %>
                                    </td>
                                    <td><a href="alimentos/<%= alimentos.id %>" class="btn btn-warning btn-sm">Editar</a></td>
                                </tr>

                                <% }) %>
                                    <% } %>

                    </tbody>
                </table>
            </div>
        </div>

        <%- include("template/footer")  %>